<?xml version="1.0" encoding="utf-8"?>
<ua.ck.geekhub.ivanov.rssreader.heplers.NotifyingScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_view_feed"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop" />

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/text_view_title"
                style="@style/TextTitleStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text_view_description"
                style="@style/TextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!--<TextView-->
                <!--android:id="@+id/text_view_date"-->
                <!--style="@style/TextStyle"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content" />-->

            <Button
                android:id="@+id/button_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/read_on_site" />
        </LinearLayout>
    </LinearLayout>
</ua.ck.geekhub.ivanov.rssreader.heplers.NotifyingScrollView>