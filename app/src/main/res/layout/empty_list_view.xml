<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_material_light"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/image_empty_size"
        android:layout_height="@dimen/image_empty_size"
        android:scaleType="centerCrop"
        android:src="@drawable/warning" />

    <TextView
        android:id="@+id/txt_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_empty_margin"
        android:gravity="center"
        android:paddingLeft="@dimen/txt_padding_horizontal"
        android:paddingRight="@dimen/txt_padding_horizontal" />

    <Button
        android:id="@+id/btn_empty_try_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_empty_margin"
        android:text="@string/button_try_again" />

    <Button
        android:id="@+id/btn_empty_go_to_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_empty_margin" />
</LinearLayout>
