<resources>

    <style name="TextStyle">
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextTitleStyle">
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextSubTitleStyle">
        <item name="android:textColor">@color/sub_title_gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:singleLine">true</item>

    </style>


    <style name="Widget.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_toolbarstyle</item>
    </style>

    <!--<style name="Widget.ActionBar.Transparent">-->
        <!--<item name="android:background">@android:color/transparent</item>-->
    <!--</style>-->
</resources>
